{
  "name": "@blindpay/mcp",
  "version": "1.2.0",
  "description": "Official MCP Server for BlindPay API - Stablecoin API for global payments",
  "type": "module",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "bin": {
    "blindpay-mcp": "./build/index.js"
  },
  "files": [
    "build/**"
  ],
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js"
    }
  },
  "scripts": {
    "start": "node build/index.js",
    "build": "tsc && chmod 755 build/index.js",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "blindpay",
    "mcp",
    "model-context-protocol",
    "global-payments",
    "stablecoin",
    "api",
    "ai",
    "cursor",
    "claude"
  ],
  "author": "BlindPay <eric@blindpay.com> (https://blindpay.com/)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blindpaylabs/blindpay-mcp.git"
  },
  "homepage": "https://blindpay.com",
  "bugs": {
    "url": "https://github.com/blindpaylabs/blindpay-mcp/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.0",
    "axios": "^1.9.0",
    "dotenv": "^16.4.5",
    "json-schema-to-zod": "^2.6.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@types/node": "^22.15.2",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "@types/node": ">=20.x.x"
  },
  "peerDependenciesMeta": {
    "@types/node": {
      "optional": true
    }
  }
}